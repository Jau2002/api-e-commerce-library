generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String
  address  String?
  photo    String?
}

model Product {
  id        Int      @id @default(autoincrement())
  title     String
  price     Float
  author    String
  editorial String
  stock     Int
  updatedAt DateTime @updatedAt
}
