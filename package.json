		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-n": "15.6.1",
		"eslint-plugin-promise": "6.1.1",
		"prettier": "2.8.4",
		"prisma": "4.11.0",
		"rimraf": "4.4.0",
		"ts-node": "10.9.1",
		"typescript": "4.9.5"
	},
	"dependencies": {
		"@prisma/client": "4.11.0",
		"cors": "2.8.5",
		"dotenv": "16.0.3",
